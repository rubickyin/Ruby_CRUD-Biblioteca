<%= form_with(model: usuario, html: { class: "form-container" }) do |form| %>
  <% if usuario.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(usuario.errors.count, "error") %> impidieron guardar este usuario:</h2>
      <ul>
        <% usuario.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :nombre, "Nombre:", class: "form-label" %>
    <%= form.text_field :nombre, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :email, "Correo Electrónico:", class: "form-label" %>
    <%= form.text_field :email, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :telefono, "Teléfono:", class: "form-label" %>
    <%= form.text_field :telefono, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :direccion, "Dirección:", class: "form-label" %>
    <%= form.text_field :direccion, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :tipo_usuario, "Tipo de Usuario:", class: "form-label" %>
    <%= form.text_field :tipo_usuario, class: "form-input" %>
  </div>

  <div class="form-actions">
    <%= form.submit "Guardar Usuario", class: "btn-primary" %>
  </div>
<% end %>
